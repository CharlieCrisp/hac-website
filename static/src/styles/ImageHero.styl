.ImageHero {
  width: 100%;
  height: 100%;
  padding: grid(6);
  display: block;

  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;

  transition-property: opacity;
  transition-duration: 0.2s;
}

.ImageHero__image {
  width: 100%;
  height: 100%;
  background-size: contain;
  background-position: center;
  background-repeat: no-repeat;
}

.ImageHero--linkable {
  cursor: pointer;

  &:hover {
    opacity: 0.8;
  }
}
