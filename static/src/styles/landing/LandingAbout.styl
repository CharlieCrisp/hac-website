.LandingAbout {
  padding: grid(4);
}

.LandingAbout__imageContainer {
  flex: 1;
}

@media screen and (min-width: 700px) {
  .LandingAbout {
    display: flex;
  }
  
  .LandingAbout__imageContainer {
    padding: grid(5);
  }
}

.LandingAbout__image {
  width: 100%;
}

.LandingAbout__text {
  flex: 1;
}

.LandingAbout__subtitle {
  // TODO: Remove this when Text--sectinoHeading is merged in
  font-family: $Text__primaryFont;
  text-transform: uppercase;
  letter-spacing: 0.15em;
  font-weight: 500;
  Text__headerScale(0);
  color: $Color__mediumGrayText;
}

.LandingAbout__headline {
  Text__headerScale(2);
  font-family: $Text__monospacedFont;
  text-transform: uppercase;
  font-weight: 900;
}
