.BigButton {
  padding: grid(1) grid(4);
  background: $Color__bright1;
  text-decoration: none;
  display: inline-block;
  color: white;
  border-radius: 3px;
  transition: background 0.2s;
  box-shadow: 0px 2px 6px alpha(darken($Color__bright1, 50%), 0.3);
}

.BigButton:hover {
  background: darken($Color__bright1, 20%);
}