@require '../core/index';

body {
  background: url("../../images/gamegig3000/gamegig-background.jpg") no-repeat center center fixed;
  background-size: cover;
  color: white;
  text-shadow: 0px 0px 10px blue;
}

$GameGig2017__linkColor = #fd7cb3;

a {
  text-decoration: none;
  padding: none;
}

a:link {
  color: $GameGig2017__linkColor;
}

a:visited {
  color: $GameGig2017__linkColor;
}

a:hover {
  color: lightpink;
  text-shadow: 0px 0px 5px white;
  transition: all 0.2s ease-in-out;
}

a:active {
  color: red;
}

$GameGig2017__navBarHeight = 50px;

.GameGigHero {
  width: 100%;
  padding: grid(10) grid(0);
  height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
}

.GameGigHero__image {
  width: 100%;
  max-width: grid(120);
  flex: 0 1 auto;
}

